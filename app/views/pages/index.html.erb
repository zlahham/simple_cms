<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="pages index">
  <h2>Pages</h2>

  <%= link_to "Add a new Page", { action: 'new' }, class: 'action new' %>

  <table class="listing" summary="Page list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Page</th>
      <th>Visible</th>
      <th>Pages</th>
      <th>Actions</th>
    </tr>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.position %></td>
        <td><%= page.name %></td>
        <td class="center"><%= subject.pages.size %></td>
        <td class="actions">
          <%= link_to "Show", { action: 'show', id: page.id }, class: 'action show' %>
          <%= link_to "Edit", { action: 'edit', id: page.id }, class: 'action edit' %>
          <%= link_to "Delete", { action: 'delete', id: page.id }, class: 'action delete' %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
