<%= @page_title = "Pages" %>
<%= link_to "<< Back to List", { action: 'index', subject_id: @subject.id }, class: 'back-link' %>

<div class="pages new">
  <h2>Edit Page</h2>

  <%= form_for :page, url: { action: 'update', id: @page.id, subject_id: @subject.id } do |f| %>

    <%= render(partial: 'form', locals: {f: f}) %>

    <div class="form-buttons">
      <%= submit_tag("Edit Page") %>
    </div>

  <% end %>
</div>
